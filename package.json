{
  "name": "oggexplorer",
  "version": "0.0.1",
  "author": "Andr√©s Gil Herrera",
  "main": "./main/bundles/main.umd.js",
  "scripts": {
    "test:main": "TS_NODE_PROJECT=\"projects/main/tsconfig.main.spec.json\" nyc mocha -r ts-node/register projects/main/src/**/*.spec.ts",
    "test:renderer": "ng test renderer",
    "test:all": "npm run test:main && npm run test:renderer",
    "build:renderer": "ng build --base-href ./",
    "build:main": "ng build main",
    "build:interfaces": "ng build interfaces",
    "build:electron": "npm run clean:dist && npm run build:interfaces && npm run build:main && npm run build:renderer && cp ./package.json dist",
    "build:start:electron": "npm run build:electron && npm run start:electron",
    "start:electron": "electron dist",
    "release:electron": "npm run clean:release && npm run build:electron && npm run pack:electron",
    "pack:electron": "cp -r ./node_modules ./dist && cd dist && electron-packager . ogg-explorer --out ./../release",
    "clean:dist": "rm -f -r ./dist",
    "clean:release": "rm -f -r ./release"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.0.0",
    "@angular/common": "~12.0.0",
    "@angular/compiler": "~12.0.0",
    "@angular/core": "~12.0.0",
    "@angular/forms": "~12.0.0",
    "@angular/platform-browser": "~12.0.0",
    "@angular/platform-browser-dynamic": "~12.0.0",
    "@angular/router": "~12.0.0",
    "electron-default-menu": "^1.0.2",
    "rxjs": "^6.6.7",
    "sound-play": "^1.1.0",
    "tslib": "^2.1.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.0.0",
    "@angular/cli": "~12.0.0",
    "@angular/compiler-cli": "~12.0.0",
    "@types/chai": "^4.2.18",
    "@types/electron": "^1.6.10",
    "@types/jasmine": "~3.6.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.45",
    "@types/sinon": "^10.0.1",
    "chai": "^4.3.4",
    "chai-spies": "^1.0.0",
    "electron": "^12.0.7",
    "electron-packager": "^15.2.0",
    "electron-rebuild": "^2.3.5",
    "jasmine-core": "~3.7.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "mocha": "^8.4.0",
    "ng-packagr": "^12.0.0",
    "nyc": "^15.1.0",
    "sinon": "^11.1.1",
    "ts-mock-imports": "^1.3.7",
    "ts-node": "^10.0.0",
    "typescript": "~4.2.3"
  }
}
